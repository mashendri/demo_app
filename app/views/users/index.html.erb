<h1>Latihan Membuat Listing User</h1>

<table>
  <thead>
    <tr>
      <th>Nama</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Tampilkan', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Hapus', user, method: :delete, data: { confirm: 'Yakin ingin menghapus data?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'User Baru', new_user_path %>
